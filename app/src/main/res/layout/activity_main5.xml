<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userNumber1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userNumber2"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:textSize="30sp"
            android:text="계산결과 : "
            />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:padding="5dp"
        >


        <TableRow>
            <Button
                android:text="1"
                android:id="@+id/num01"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="2"
                android:id="@+id/num02"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="3"
                android:id="@+id/num03"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="+"
                android:id="@+id/plus"
                />
        </TableRow>
        <TableRow>

            <Button
                android:text="4"
                android:id="@+id/num04"
                android:layout_column="0"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="5"
                android:id="@+id/num05"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="6"
                android:id="@+id/num06"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="-"
                android:id="@+id/minus"
                />
        </TableRow>
        <TableRow>

            <Button
                android:text="7"
                android:id="@+id/num07"
                android:layout_column="0"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="8"
                android:id="@+id/num08"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="9"
                android:id="@+id/num09"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="*"
                android:id="@+id/multiple"
                />
        </TableRow>
        <TableRow>

            <Button
                android:text="C"
                android:id="@+id/reset"
                android:layout_column="0"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="0"
                android:id="@+id/num00"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text=""
                android:visibility="invisible"
                android:layout_marginRight="5dp"
                />
            <Button
                android:text="/"
                android:id="@+id/divide"
                />
        </TableRow>

    </TableLayout>

</LinearLayout>